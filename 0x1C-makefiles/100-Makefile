CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school
CFLAGS = -Wall -Werror -Wextra -pedantic

.phony: all clean oclean fclean re

all: header $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

header:
	@if [ ! -f m.h ]; then exit 1; fi

clean:
	$(RM) -f *~ $(NAME)

oclean:
	$(RM) -f $(OBJ)

fclean: clean oclean

re: oclean all
